    <body>
        <h3>All Listings</h3>
        <!-- <form method="GET" action="/listings/new">
        <button>Create New List</button>
    </form> -->
        <div class="row">
            <% for(let listing of allListings ){%>
                <div class="card" style="width: 18rem;">
                    <%= console.log("Image Path:", listing.image) %>
                    
                    <% console.log("Image Object:", listing.image); %>
                    <img src="<%= listing.image %>" class="card-img-top" alt="listing_image">
                   
                  <div class="card-body">
                        <p class="card-text">
                            <%=listing.title %>
                                <br>
                                &#8377; <%= listing.price.toLocaleString("en-IN")%>
                        </p>
                    </div>
                </div>
                <% } %>
        </div>
        <div>
           <img src=" https://images.unsplash.com/photo-1499793983690-e29da59ef1c2?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8YmVhY2glMjBob3VzZXxlbnwwfHwwfHx8MA%3D%3D&auto=format&fit=crop&w=800&q=60">
        
        </div>
       

               
    </body>