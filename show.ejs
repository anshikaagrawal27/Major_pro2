<% layout('\layouts/boilerplate') -%>
    <h3>Listing Details</h3>
    <ul>
        <li><b>title:</b>
            <%= listing.title %>
        </li>
        <li>
            <%= listing.description %>
        </li>
        <li>&#8377;<%= listing.price.toLocaleString("en-IN")%>
        </li>
        <li>
            <%= listing.location %>
        </li>
        <li>
            <%= listing.country %>
        </li>
    </ul>
